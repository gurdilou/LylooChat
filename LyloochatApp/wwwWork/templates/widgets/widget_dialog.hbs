<div class="dialog-ctn {{type}}-ctn">
    {{#if header}}
    <div class="dialog-header {{type}}-header"><i class="dialog-header-img ic ic-lg icon-{{header.icon}}"></i>{{header.message}}</div>
    {{/if}}
    {{#each messages}}
        <div class="dialog-msg {{../type}}-msg">{{this}}</div>
    {{/each}}
    {{#if footer}}
    <div class="dialog-footer">
        {{#each footer.buttons}}
            {{#if_eq this "ok"}}
                {{>widget_text_button class="dialog-btn ok-btn" code="OK"}}
            {{/if_eq}}

            {{#if_eq this "cancel"}}
                {{>widget_text_button class="dialog-btn cancel-btn" code="Annuler"}}
            {{/if_eq}}

        {{/each}}
    </div>
    {{/if}}
</div>
