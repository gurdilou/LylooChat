<div class="material-context whiteboard-menu-brush">
    <div class="row">
        <div class="col s12 m10 offset-m2 l8 offset-l2">
            <div class="card">
                <div class="card-content">
                    <span class="card-title menu-brush-title">{{loc.title}}</span>
                    <ul class="collection">
                        {{#each brushes}}
                            <li class="collection-item pick-{{name}} {{#if active}} active {{/if}}"
                                value="{{name}}">
                                <span value="{{name}}">{{label}}</span>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
