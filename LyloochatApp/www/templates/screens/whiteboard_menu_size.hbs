<div class="material-context whiteboard-menu-size">
    <div class="row">
        <div class="col s12 m10 offset-m2 l8 offset-l2">
            <div class="card">
                <div class="card-content">
                    <span class="card-title menu-size-title">{{loc.title}}</span>
                    <ul class="collection">
                        {{#each sizes}}
                            <li class="collection-item {{#if active}} active {{/if}}" index="{{index}}">
                                <span index="{{index}}">{{label}}</span>
                                <div class="brush-size-preview" style="height:{{size}}px; width:{{size}}px" index="{{index}}"></div>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
