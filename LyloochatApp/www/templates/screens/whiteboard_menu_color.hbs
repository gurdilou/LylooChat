<div class="material-context whiteboard-menu-color">
    <div class="row">
        <div class="col s12 m10 offset-m2 l8 offset-l2">
            <div class="card">
                <div class="card-content">
                    <span class="card-title menu-color-title">{{loc.title}}</span>
                    <div class="pure-g">

                        {{#each colors}}
                            <div class="pure-u-1-3 color-pick-cell" value="{{this}}">
                                <div class="color-pick l-box" value="{{this}}" style="background: {{this}}">
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
